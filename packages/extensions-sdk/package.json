{
	"name": "@wbce-d9/extensions-sdk",
	"version": "10.0.2",
	"description": "A toolkit to develop extensions to extend Directus",
	"homepage": "https://directus.io",
	"type": "module",
	"bugs": {
		"url": "https://github.com/LaWebcapsule/directus9/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/LaWebcapsule/directus9.git",
		"directory": "packages/extensions-sdk"
	},
	"funding": "https://github.com/LaWebcapsule/directus9?sponsor=1",
	"author": "Nicola Krumschmidt",
	"exports": {
		".": "./dist/index.js",
		"./cli": "./dist/cli/index.js",
		"./package.json": "./package.json"
	},
	"main": "dist/index.js",
	"bin": {
		"directus-extension": "cli.js"
	},
	"files": [
		"dist",
		"templates",
		"!**/*.test.{js,d.ts}"
	],
	"scripts": {
		"build": "tsc --build",
		"dev": "tsc --watch",
		"test": "vitest --watch=false"
	},
	"dependencies": {
		"@wbce-d9/composables": "workspace:*",
		"@wbce-d9/constants": "workspace:*",
		"@wbce-d9/types": "workspace:*",
		"@wbce-d9/utils": "workspace:*",
		"@rollup/plugin-node-resolve": "catalog:",
		"@rollup/plugin-virtual": "catalog:",
		"@vue/compiler-sfc": "catalog:",
		"chalk": "catalog:",
		"commander": "catalog:",
		"execa": "catalog:",
		"fs-extra": "catalog:",
		"inquirer": "catalog:",
		"ora": "catalog:",
		"rollup": "catalog:",
		"@rollup/plugin-commonjs": "24.1.0",
		"@rollup/plugin-json": "6.0.0",
		"@rollup/plugin-replace": "5.0.2",
		"@rollup/plugin-terser": "0.4.1",
		"esbuild": "0.25.0",
		"rollup-plugin-esbuild": "5.0.0",
		"rollup-plugin-styles": "4.0.0",
		"rollup-plugin-vue": "6.0.0"
	},
	"devDependencies": {
		"@types/fs-extra": "catalog:",
		"@types/inquirer": "catalog:",
		"@vitest/coverage-v8": "catalog:",
		"@wbce-d9/tsconfig": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:"
	},
	"engines": {
		"node": ">=22"
	},
	"publishConfig": {
		"access": "public"
	}
}
